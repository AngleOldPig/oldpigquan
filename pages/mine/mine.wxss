/* pages/mine/mine.wxss */
@import "/pages/bottom_menu/bottom_menu";

page {
  background-color: #efefef;
}

.userInfo{
  width: 100%;
  margin-top: 0rpx;
  margin-left: 0rpx;
  margin-right: 0rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 20rpx solid #efefef;
}

.load_avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
  border-radius: 10rpx;
  border: 3px solid #efefef;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.load_nickName{
  align-content: center;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  font-size: 50rpx;
  font-weight: bold;
}

.avatar{
  margin-top: 10rpx;
  width: 180rpx;
  height: 180rpx;
}

.nickname{}

.scbg {
  background-color: #efefef;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.box{
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #efefef;
}

.secondblock{
  height: 60rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  border-bottom: 3rpx solid #bbbbbb;
}

.face{
  width: 130rpx;
  height: 130rpx;
}

.user{
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name{
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
  flex-direction: row;
}

.time{
  display: flex;
  justify-content: flex-start;
  margin-top: 1rpx;
  flex-direction: row;
}

.showname{
  font-size: 37rpx;
  color: #3f51b5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.showtime{
  font-size: 28rpx;
  color: #5e5d5d;
  font-family: PingFangSC-regular;
}

.firstblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
}

.content{
  font-size: 32rpx;
  color: #101010;
  word-break: break-all;
}

.thirdblock{
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}

.like{
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.likenumber{
  height: 52rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}

.del{
  margin-top: 25rpx;
  margin-right: 20rpx;
  margin-left: 400rpx;
  width: 150rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background-color: #E51C23;
  font-size: 30rpx;
  text-align: center;
  color: #FFFFFF;
  line-height: 50rpx;

}