<!--pages/square/square.wxml-->
<scroll-view class="scbg" scroll-y='true'>
  <view class="box">
    <view class="firstblock">
      <image class="face"></image>
      <view class="user">
        <view class="name">
          <text class="showname"></text>
        </view>
        <view class="time">
          <text class="showtime"></text>
        </view>
      </view>
    </view>
    <view class="secondblock">
      <text class="content"></text>
    </view>
    <view class="thirdblock">
      <image class="like"></image>
      <text class="likenumber"></text>
    </view>
  </view>
</scroll-view>

<include src="/pages/bottom_menu/bottom_menu" />